<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

    <display-name>JQueryImageCrop</display-name>
	<servlet>
    	<servlet-name>ImgUploadServlet</servlet-name>
    	<servlet-class>com.joe.servlet.ImgUploadServlet</servlet-class>
  	</servlet>
  	<servlet>
    	<servlet-name>ImgCropServlet</servlet-name>
    	<servlet-class>com.joe.servlet.ImgCropServlet</servlet-class>
  	</servlet>

  	<servlet-mapping>
    	<servlet-name>ImgUploadServlet</servlet-name>
    	<url-pattern>/imgUpload</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
    	<servlet-name>ImgCropServlet</servlet-name>
    	<url-pattern>/imgCrop</url-pattern>
  	</servlet-mapping>
  	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
